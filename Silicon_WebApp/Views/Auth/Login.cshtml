@model LoginModel

@{
	ViewData["Title"] = "Sign in";
}

<section id="signin">
	<div class="container">
		<form method="post" asp-controller="Auth" asp-action="Login" novalidate>

			<h1>Welcome Back</h1>
			<p>Dont have an account yet? <a asp-controller="Auth" asp-action="Register">Sign up here</a></p>


			<div class="content">

				<div id="form-email" class="input-group">
					<label asp-for="Email"></label>
					<input asp-for="Email" />
				</div>
				<div id="form-password" class="input-group">
					<label asp-for="Password"></label>
					<input asp-for="Password" />
				</div>
				<div id="form-remember" class="checkbox">
					<div class="checkbox-group">
						<input asp-for="RememberMe" />
						<label asp-for="RememberMe">Remember me</label>
					</div>
				</div>

				<div class="login-error">
					<span class="field-validation-error errormessage">@ViewData["ErrorMessage"]</span>
				</div>
				<button id="form-submit" class="btn-theme-s" type="submit">SIGN IN</button>

				<a id="form-forgot-password" asp-controller="Auth" asp-action="Forgot">Forgot your password?</a>
			</div>

		</form>
	</div>
</section>