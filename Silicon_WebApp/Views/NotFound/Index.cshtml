@{
	var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
	var isDark = (themeMode == "dark") ? true : false;
}


<section>
	<div class="container">
		<div class="not-found">
			<img src="~/images/@(isDark ? "404-dark.svg" : "404.svg")" alt="" />
			<h1>Ooops!</h1>
		<p>The page you are looking for is not available</p>
			<a class="btn-theme" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Go to homepage</a>
		</div>
	</div>
</section>
